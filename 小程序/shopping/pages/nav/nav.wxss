/**index.wxss**/
@import '/app.wxss'; 

.swiper_class {
  height: 280rpx;
}


.loc{
  display: flex;
  height: 90rpx;
  align-items: center;
}
.loc-a{
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}
.loc-b{
  font-size: 30rpx;
}

.section{ position: absolute; width: 100%; height: 74% ; overflow: hidden;}
.left{ position: absolute; left: 0; top: 0; height: 100%; width: 90px; background: #F6F6F6; text-align: center;font-size:28rpx;}
.left::before{ content: ""; position: absolute; background: #dcdcdc; right: 0; top: 0; height: 100%; border-right: 1rpx solid #dcdcdc;}
.left view.active{ background: #FFF; position: relative; z-index: 2;}
.left view{ display: block; height: 40px; line-height: 40px; border-bottom: 1px solid #dcdcdc;}
.right{ margin-left: 90px; height: 100%; overflow: hidden; width: auto;background: #fff;}
.right text{ font-size: 15px}



.l-item-top{
  display: flex;
  height: 80rpx;
  align-items: center
}
.l-item-top-a{
  font-size: 40rpx;
  margin-right: 14rpx;
  font-weight: bold;
}
.l-item-top-b{
  width: 60%;
  height: 2rpx;
  background-color: #f4f4f4;
}
.n-item{
  display: flex;
  height: 160rpx;
  border-bottom: 1rpx solid #f4f4f4;
  padding: 20rpx 0;
}
.n-item-img{
  width: 40%;

}
.n-item-img image{
  border-radius: 8rpx;

}
.n-item-info{
  width: 60%;
  height: 100%;
margin-left: 12rpx;
}
.n-item-info-a{
  font-size: 30rpx;
  color: #000;
  margin-top: 10rpx;
}
.n-item-info-b{
  font-size: 26rpx;
  color: #dcdcdc;
  height: 36%;  
}
.n-item-info-c{
  display: flex;
  align-items: center;
}
.n-item-info-d{
  color: orange;
  font-size: 28rpx;
  margin-right: 50%;
}
.n-item-info-e{
  width: 48rpx;
  height: 48rpx;
}
.l-items{
  margin-left: 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.i-item-img{
  width: 70rpx;
  height: 70rpx;
}
.i-item-class{
  width: 33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.i-item-name{
  font-size: 32rpx;
  margin-top: 20rpx;

}