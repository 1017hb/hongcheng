/**app.wxss**/
page{
  background-color: #f4f4f4;
}
.swiper_class{
  height: 421.5rpx;
}
swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}
image{
  width: 100%;
  height: 100%;
}
.ico-item{
  width: 46%;
  background-color: #fff;
  margin: 8rpx 2%;
  border-radius: 10rpx; 
}

.ico-item-img{
  width: 100%;
  height: 360rpx;
}
.ico-item-bottom{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  padding-left: 10rpx;
}
.ico-item-bottom-name{
  line-height: 18px;
  margin: 0 5rpx;
  
}
.ico-item-bottom-price{
  display: flex;
  width: 84%;
}
.ico-item-bottom-price-new{
  color: #e80080;
  font-weight: 900;
  font-size: 30rpx;
}
.ico-item-bottom-price-old{
  color: #888;
  text-decoration: line-through;
}
.ico-item-bottom-info{
  display: flex;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  align-items: center;
}
.ico-item-bottom-add-car{

  width: 34rpx;
  height: 34rpx
}
.ico-item-bottom-number{
  line-height: 24rpx;
  margin-bottom: 18rpx;
  color: #888;
}



















.t-item{
  width: 30%;
  background-color: #fff;
  margin: 8rpx 2%;
  border-radius: 10rpx; 
}
.t-item-top{
  height: 200rpx;

}
.t-item-top image{
  border-radius: 10rpx 10rpx 0 0;
}

.money{
  font-size: 20rpx;
  color: orange;
  margin-right: 80rpx;
}
.add-car{
  width: 48rpx;
  height: 48rpx;
}
.i-com{
  width: 100%;
  display: flex;
  justify-items: center;
  align-items: center;
}
.i-con{
  background-color: blue;
  width: 8rpx;
  height: 26rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}