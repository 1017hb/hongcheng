/**index.wxss**/
.chao{
  display: flex;
  flex-wrap: wrap;
}
image{
  width: 100%;
  height: 100%;
}
.ico-item{
  width: 46%;
  background-color: #fff;
  margin: 8rpx 2%;
  border-radius: 10rpx; 
}

.ico-item-img{
  width: 100%;
  height: 360rpx;
}
.ico-item-bottom{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  padding: 0 0 20rpx 10rpx;
}
.ico-item-bottom-name{
  line-height: 30px;
  margin: 0 5rpx;
   white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.ico-item-bottom-price{
  display: flex;
  width: 84%;
}
.ico-item-bottom-vip{
  font-size: 30rpx;
  background-color: red;
  color: #fff;
  border-radius: 8rpx;
  width: 260rpx;
  text-align: center;
  
}
.ico-item-bottom-price-new text{
  font-weight: 600;
  font-size: 30rpx
}
.ico-item-bottom-price-new{
  color: red;
  margin-left: 10rpx;
}
.ico-item-bottom-info{
  display: flex;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  align-items: center;
}
.ico-item-bottom-add-car{

  width: 34rpx;
  height: 34rpx
}
.ico-item-bottom-number{
  line-height: 24rpx;
  margin-bottom: 18rpx;
  color: #888;
}
.ico-price-old{
  color: #888;
  text-decoration: line-through;
}






.goods {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.goods > .goods-item {
  border-radius: 8rpx;
}

.goods > .goods-item {
  width: 48%;
}


.goods-item {
  color: #333;
  padding-bottom: 85rpx;
  font-size: 30rpx;
  border: 2rpx solid #f4f4f4;
}

.image {
  width: 100%;
  border-radius: 10rpx;
}

.desc-info {

}

.title {
 white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  line-height: 40rpx;
}
.info{
  display: flex;

}
.vip{
  background-color: red;
  color: #fff;
  padding: 4rpx;
  border-radius: 8rpx;

}
.price{
  color: red;
}



