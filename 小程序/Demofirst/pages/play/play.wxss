
.server_top{
  display: flex;
}
.shoot_row{
  width: 100%;
}
.shoot_row image{
  width: 100%;
}
.shoot_row.moddile {
  background-color: rgb(223, 223, 223);
}
.shoot_row.moddile image{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.server_icon{
  width: 10rpx;
  height: 50rpx;
  background-color: rgb(240, 80, 80);
}
.server_title{
  margin-left: 14rpx;
  color: rgb(100, 97, 97);
  font-size: 24rpx;
  line-height: 44rpx;
}


.service_items{
  margin-top: 40rpx;
   white-space: nowrap; display: flex
}
.item{
  width: 44%;
  display: inline-block;/*横向滚动需加该属性*/
  margin: 20rpx;
}
.item_img image{
  width: 100%;
  height: 222rpx;
}
.item_tile{
  font-size: 26rpx;
  color: rgb(44, 43, 43);
}
.item_tile{
  margin-bottom: 10rpx;
}
.item_content{
  display: flex;
}
.content{
  font-size: 24rpx;
}
.content.price{
  margin-right: 10rpx;
  color: rgb(245, 103, 8);
}
.content.number{
  color: rgb(151, 146, 146);
}



.server_bottom{
  margin-top: 30rpx;
}
.bottom_item{
  display: flex; 
  border-bottom: 1rpx solid rgb(216, 207, 207);
  padding-left: 20rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  width: 100%
}
.b_item_img{
  width: 30%;
  height: 140rpx;
  margin-right: 10rpx;
}
.b_item_img image{
  width: 100%;
  height: 100%;
}
.item_tile.bottom{
  margin-bottom: 48rpx;
}